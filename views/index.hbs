<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3">
    {{#each restaurants}}
    <div class="restaurant-container col-12">
        {{!-- render restaurant-list --}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
      
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
      
              <span class="font-weight-normal">
                {{this.rating}}
                <i class="fa-solid fa-star" style="color: #e60505;"></i>
              </span>
            </div>
            <ul class="index-ul">
              <li style="display:inline">
                <a href="/restaurants/{{this._id}}/edit">Edit</a>
                <a href="/restaurants/{{this._id}}/detail">Detail</a>
                <form action="/restaurants/{{this._id}}/delete" method="POST" style="display:inline">
                  <button class="btn btn-outline-danger" type="submit">Delete</button>
                  {{!-- <button class="btn btn-danger" type="submit">Delete</button> --}}
                </form>
              </li>
            </ul>
          </div>
        </a>
    </div>
    {{/each}}
  </div>
  <a class="btn btn-light create-plus" href="#" role="button"><i class="fa-solid fa-plus" style="color: #fff;"></i></a>
  {{!-- <form action="/restaurants/new" class="fixed-button">
    <button type="submit"><i class="create-button fa-solid fa-plus" style="color: #000000;"></i></button>
  </form> --}}
</div>